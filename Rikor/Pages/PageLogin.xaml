<Page x:Class="Rikor.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rikor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel>
            <Label Content="Авторизация" FontSize="30" FontStyle="Italic"  Margin="250,120,250,20" HorizontalAlignment="Center"/>
            <Label Content="Логин:" Margin="250,0,250,0"/>
            <TextBox x:Name="txbLogin" Margin="250,0,250,0"/>
            <Label Content="Пароль:" Margin="250,0,250,0"/>
            <PasswordBox x:Name="psbPassword" Margin="250,0,250,0"/>
            <Button Name="okBtn" Content="Вход" Click="okBtn_Click" Margin="250,20,250,0"/>
            <Button Name="regBtn" Content="Регистрация" Margin="250,10,250,0"/>
        </StackPanel>
    </Grid>
</Page>
